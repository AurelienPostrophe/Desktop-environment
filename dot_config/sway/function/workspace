###############################################################################
# Workspace
###############################################################################

set $ws1 workspace number 1
set $ws2 workspace number 2
set $ws3 workspace number 3
set $ws4 workspace number 4
set $ws5 workspace number 5
set $ws6 workspace number 6
set $ws7 workspace number 7
set $ws8 workspace number 8
set $ws9 workspace number 9
set $ws10 workspace number 10

###############################################################################
# Switch focused container
###############################################################################

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

###############################################################################
# Switch focused workspace
###############################################################################

bindsym $mod+ampersand $ws1
bindsym $mod+eacute $ws2
bindsym $mod+quotedbl $ws3
bindsym $mod+apostrophe $ws4
bindsym $mod+parenleft $ws5
bindsym $mod+minus $ws6
bindsym $mod+egrave $ws7
bindsym $mod+underscore $ws8
bindsym $mod+ccedilla $ws9
bindsym $mod+agrave $ws10

###############################################################################
# Move focused container
###############################################################################

# Move focused container directionnaly
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Move focused container to workspace
bindsym $mod+Shift+ampersand move container to $ws1
bindsym $mod+Shift+eacute move container to $ws2
bindsym $mod+Shift+quotedbl move container to $ws3
bindsym $mod+Shift+apostrophe move container to $ws4
bindsym $mod+Shift+parenleft move container to $ws5
bindsym $mod+Shift+6 move container to $ws6
bindsym $mod+Shift+egrave move container to $ws7
bindsym $mod+Shift+underscore move container to $ws8
bindsym $mod+Shift+ccedilla move container to $ws9
bindsym $mod+Shift+agrave move container to $ws10
